<h1>Find Your Destination</h1>
<p>Not a member? Sign up <%= link_to "here", new_user_path %></p>

<div class="login">
  <%= form_tag "/sessions", {class: "login-form"} do %>
    <%= label_tag :email %>
    <br/>
    <%= email_field_tag :email %>
    <br/>
    <br/>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br/>
    <br/>
    <%= submit_tag "Log in" %>
  <% end %>
</div>
